<view class="post-container" bind:tap="onTap" data-id="{{item.postId}}">
  <view class="post-author-date">
    <image class="post-author" src="{{item.avatar}}" />
    <text class="post-date">{{item.date}}</text>
  </view>
  <text class="post-title">{{item.title}}</text>
  <image class="post-image" src="{{item.imgSrc}}" />
  <text class="post-content">{{item.content}}</text>
  <view class="post-like">
    <l-icon class="post-like-image" name="favor" size="28" color="#666" />
    <text class="post-like-font">{{item.collection}}</text>
    <l-icon class="post-like-image" name="eye" size="32" color="#666" />
    <text class="post-like-font">{{item.reading}}</text>
  </view>
</view>