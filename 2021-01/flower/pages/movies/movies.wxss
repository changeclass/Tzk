.movie-list {
  margin-bottom: 30rpx;
}
page {
  background-color: #f2f2f2;
}
.ex-search-bar {
  height: 90rpx !important;
}
.search-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx 28rpx;
  justify-content: space-between;
}
/* 用于解决 space-between 两个元素时两端对齐的bug */
.search-container::after {
  content: '';
  /* 设置成一个子元素的宽度 */
  width: auto;
}
